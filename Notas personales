# Escritura de Archivo de Texto
with open('my_notes.txt', 'w') as file:
    file.write("Notas Personales:\n")
    file.write("1. Recordar comprar leche en el supermercado.\n")
    file.write("2. Llamar a Bryan para confirmar la reunión de mañana.\n")
    file.write("3. Terminar el informe antes del viernes.\n")

# Lectura de Archivo de Texto
with open('my_notes.txt', 'r') as file:
    print("Contenido del archivo my_notes.txt:")
    for line in file:
        print(line.strip())  # Elimina el salto de línea al final de cada línea

# Cierre de Archivo
file.close()
